<!--miniprogram/pages/dashboard.wxml-->
<view>
	<view class="swiper-tab">
		<view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">Mon.</view>
		<view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">Tue.</view>
		<view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">Wed.</view>
		<view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">Thu.</view>
		<view class="swiper-tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap="clickTab">Fri.</view>
	</view>

	<swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
		<swiper-item>
			<text class="fa fa-user text-primary"></text>
			<view class="cu-tag round">默认</view>

			<view class="cu-capsule round">
				<view class="cu-tag bg-tag1 sm">
					说明
				</view>
				<view class="cu-tag bg-tag2 sm">
					123
				</view>
			</view>

		</swiper-item>
		<swiper-item>
			<view>Tue.</view>
		</swiper-item>
		<swiper-item>
			<view>Wed.</view>
		</swiper-item>
		<swiper-item>
			<view>Thu.</view>
		</swiper-item>
		<swiper-item>
			<view>Fri.</view>
		</swiper-item>
	</swiper>
</view>