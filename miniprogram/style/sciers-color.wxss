/* Global Color Setting (Non DarkMode) */

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
  'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
  'Noto Color Emoji';
  --color-white: #fff;
  line-height: 22px;
  font-size: 14px;
  

  background-color: var(--color-bg);
  --color-primary: rgb(127, 33, 29);
  --color-success: rgb(52, 199, 89);
  --color-warning: rgb(255, 149, 0);
  --color-error: rgb(255, 59, 48);
  --color-error: rgb(255, 59, 48);
  --color-tag1: rgb(175, 82, 222);
  --color-tag2: rgb(94, 92, 230);
  --color-font: rgb(35, 35, 35);
  --color-bg: #fff;
  --color-bg-float: #fff;

  --font-size-sm: 16pt;
  font-size: var(--font-size-sm);
}

@media (prefers-color-scheme: dark) {


  /* Global Color Setting (DarkMode) */
  page {
    --color-primary: rgb(167, 73, 69);
    --color-success: rgb(48, 209, 88);
    --color-warning: rgb(255, 159, 10);
    --color-error: rgb(255, 69, 58);
    --color-tag1: rgb(191, 90, 242);
    --color-tag2: rgb(94, 92, 230);
    --color-font: #fff;
    --color-bg: #000;
    --color-bg-float: rgb(28, 28, 30);
    background-color: var(--color-bg);

  }
}

.text-primary,
.line-primary,
.lines-primary {
  color: var(--color-primary);
}

.text-success,
.line-success,
.lines-success {
  color: var(--color-success);
}

.text-warning,
.line-warning,
.lines-warning {
  color: var(--color-warning);
}

.text-error,
.line-error,
.lines-error {
  color: var(--color-error);
}

.text-tag1,
.line-tag1,
.lines-tag1 {
  color: var(--color-tag1);
}

.text-tag2,
.line-tag2,
.lines-tag2 {
  color: var(--color-tag2);
}

.text,
.line,
.lines {
  color: var(--color-font);
}


.bg-primary {
  background-color: var(--color-primary);
  color: var(--color-white);
}

.bg-success {
  background-color: var(--color-success);
  color: var(--color-white);
}

.bg-warning {
  background-color: var(--color-warning);
  color: var(--color-white);
}

.bg-error {
  background-color: var(--color-error);
  color: var(--color-white);
}

.bg-tag1 {
  background-color: var(--color-tag1);
  color: var(--color-white);
}

.bg-tag2 {
  background-color: var(--color-tag2);
  color: var(--color-white);
}